//Pedir el ingreso de un número e informar si es positivo o negativo.
Algoritmo CONDICIONALES_3c
	Definir numero Como Real;
	
	Mostrar "Ingresar un número: ";
	Leer numero;
	
	Si numero < 0 Entonces;
		Mostrar "El número es negativo.";
	SiNo;
		Mostrar "El número es positivo.";
	FinSi;

FinAlgoritmo
